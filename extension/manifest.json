{
    "description": "Helper Add-on for quick-dl",
    "manifest_version": 2,
    "name": "Quick-DL Helper",
    "version": "0.5",
    "icons": {
        "48": "icons/download.svg"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "quick-dl-helper@tkspectro",
            "strict_min_version": "58.0"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icons/download.svg",
        "default_popup": "popup/path_picker.html"
    },

    "permissions": ["http://localhost/*", "tabs", "menus", "activeTab"]
}
